

html,
body
    padding 0
    margin 0
    background white

body
    font-size 16px
    font-family Roboto, Arial

.container
    margin 0 auto
    max-width 768px

a
    color #4267b1
    text-decoration none
    &:hover,
    &:focus
        text-decoration underline

h1
    padding 20px 0
    text-align center

nav
    border-top 1px solid black
    border-bottom 1px solid black

    .container
        display Grid
        grid-template-columns 1fr 1fr 1fr 1fr

    a
        text-align center
        padding 20px 0

.container
    box-shadow 0px 0px 1px purple

.main
    padding 10px 0

    // .container
    //     display grid
    //     grid-template-columns 1fr 1fr
    //     // grid-template-rows minmax(250px, auto) minmax(250px, auto)


.card
    background black
    color white
    padding 20px

    &__text
        font-size 16px
        height 10em
        overflow hidden

.news
    > div
        width 100%
        overflow hidden
        padding-bottom 30px

    &__picture
        margin-right 20px
        height 200px
        float left


.none
    display none
